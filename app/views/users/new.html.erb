<h1>Sign Up For Exam</h1>

<%= form_with model: @user do |form| %>
<div class="mb-3">
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
    <div><%= message %></div>
    <% end %>
</div>


<div class="mb-3">
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
    <% @user.errors.full_messages_for(:last_name).each do |message| %>
    <div><%= message %></div>
<% end %>
</div>



<div class="mb-3">
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number %>
    <% @user.errors.full_messages_for(:phone_number).each do |message| %> 
    <div><%= message %></div>
    <% end %>
</div>

<div class="mb-3">
    <%= form.label :college_name %><br>
    <%= form.text_field :college_name %>
    <% @user.errors.full_messages_for(:college_name).each do |message| %> 
    <div><%= message %></div>
    <% end %>
</div>

<div class="mb-3">
    <%= form.label :exam_name %><br>
    <%= form.text_field :exam_name %>
    <% @user.errors.full_messages_for(:exam_name).each do |message| %> 
    <div><%= message %></div>
    <% end %>
</div>


<div>
    <%= form.submit class:"btn btn-primary" %> 
</div>
<% end %>